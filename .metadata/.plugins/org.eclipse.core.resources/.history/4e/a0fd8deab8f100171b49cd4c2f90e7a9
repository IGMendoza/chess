package chess;

import java.util.ArrayList;

public class Board {
	private ArrayList<ArrayList<String>> coords;
	
	Board() {
		this.coords = new ArrayList<ArrayList<String>>();
		
		ArrayList<String> tmp1 = new ArrayList<String>();
		ArrayList<String> tmp2 = new ArrayList<String>();
		for(int i = 0; i < 8; i++) {
			tmp1.add("++");
		}
		for(int i = 0; i < 8; i++) {
			tmp2.add(" " + (char)(48 + i));
		}
		tmp2.add(" " + (char)248);
		
		for(int i = 0 ; i < 8; i++) {
			this.coords.add(tmp1);
			this.coords.get(i).add(" " + (char)(104 - i));
		}
		this.coords.add(tmp2);
	}
	
	public void printBoard() {
		for(int i = 0; i < this.coords.size(); i++) {
			for(int j = 0; j < this.coords.get(i).size(); j++) {
				System.out.print(this.coords.get(i).get(j));
				System.out.print(" ");
			}
			System.out.println(" ");
		}
	}
}
