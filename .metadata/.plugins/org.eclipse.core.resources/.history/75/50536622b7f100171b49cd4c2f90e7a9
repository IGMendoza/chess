package chess;

import java.util.LinkedList;

public class Board {
	private LinkedList<LinkedList<String>> coords;
	
	Board() {
		LinkedList<String> tmp = new LinkedList<String>();
		this.coords = new LinkedList<LinkedList<String>>();
		for(int i = 0; i < 8; i++) {
			for(int j = 0; j < 8; j++) {
				tmp.add("++ ");
			}
			tmp.add("" + (char)(104-i));
			this.coords.add(tmp);
			tmp.clear();
		}
		for(int i = 0; i < 8; i++) {
			tmp.add(" " + (char)(49+i));
		}
		tmp.add(" x");
		this.coords.add(tmp);
		tmp.clear();
	}
	
	public void printBoard() {
		System.out.println(this.coords.get(1).size());
		/*
		for(int i = 0; i < this.coords.size(); i++) {
			for(int j = 0; j < this.coords.get(i).size(); j++) {
				System.out.print(this.coords.get(i).get(j));
				System.out.print(" ");
			}
			System.out.println(" ");
		}
		*/
	}
}
