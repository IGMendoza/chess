package chess;

public class Piece {
	private String type;
	private String printName;
	private String name;
	private String position;
	private String color;
	
	Piece(String type, String printName, String color) {
		this.type		= type;
		this.color		= color;
		this.printName	= printName;

		if(this.printName.charAt(3) == 'q' || this.printName.charAt(3) == 'K') {
			this.name = "" + this.printName.charAt(1) + this.printName.charAt(2) + 
							this.printName.charAt(3); 
		} else {
			this.name = "" + this.printName.charAt(2) + this.printName.charAt(3);
		}
	}
	
	public void setPosition(String n_position) {
		this.position = n_position;
	}
	
	public String getPosition() {
		return this.position;
	}
	
	public String getPrintName() {
		return this.printName;
	}
	
	public String getName() {
		return this.name;
	}
	
	public int getX() {
		return (int)(this.position.charAt(1)) - 49;
	}
	
	public int getY() {
		return 104 - (int)(this.position.charAt(0));
	}
	
	public String getType() {
		return this.type;
	}
	
	@Override
	public String toString(){
		return this.color + " " + this.type + ": " + this.name + " at: " + this.position;
	}
}
